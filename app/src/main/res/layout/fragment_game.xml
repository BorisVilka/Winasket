<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentGame">

         <win.winbasket.ball.winline.game.GameView
             android:id="@+id/game"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:layout_editor_absoluteX="0dp"
             tools:layout_editor_absoluteY="0dp" />

         <ImageView
             android:id="@+id/imageView2"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginStart="8dp"
             android:layout_marginTop="8dp"
             android:src="@drawable/ball"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <ImageView
             android:id="@+id/imageView3"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginStart="8dp"
             android:layout_marginTop="8dp"
             android:src="@drawable/money"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/imageView2" />

         <TextView
             android:id="@+id/balls"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_marginStart="8dp"
             android:fontFamily="@font/font"
             android:gravity="center"
             android:text="0"
             android:textColor="#FFFFFF"
             android:textSize="34sp"
             app:layout_constraintBottom_toBottomOf="@+id/imageView2"
             app:layout_constraintStart_toEndOf="@+id/imageView2"
             app:layout_constraintTop_toTopOf="@+id/imageView2" />

         <TextView
             android:id="@+id/gold"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_marginStart="8dp"
             android:fontFamily="@font/font"
             android:gravity="center"
             android:text="0"
             android:textColor="#FFFFFF"
             android:textSize="34sp"
             app:layout_constraintBottom_toBottomOf="@+id/imageView3"
             app:layout_constraintStart_toEndOf="@+id/imageView2"
             app:layout_constraintTop_toTopOf="@+id/imageView3" />

         <ImageView
             android:id="@+id/b1"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginTop="8dp"
             android:layout_marginEnd="8dp"
             android:src="@drawable/bomb"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <ImageView
             android:id="@+id/b2"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginTop="8dp"
             android:layout_marginEnd="8dp"
             android:src="@drawable/bomb"
             app:layout_constraintEnd_toStartOf="@+id/b1"
             app:layout_constraintTop_toTopOf="parent" />

         <ImageView
             android:id="@+id/b3"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginTop="8dp"
             android:layout_marginEnd="8dp"
             android:src="@drawable/bomb"
             app:layout_constraintEnd_toStartOf="@+id/b2"
             app:layout_constraintTop_toTopOf="parent" />

         <ImageView
             android:id="@+id/back2"
             android:layout_width="60dp"
             android:layout_height="40dp"
             android:layout_marginStart="16dp"
             android:layout_marginBottom="16dp"
             android:src="@drawable/back"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent" />

         <ImageView
             android:id="@+id/imageView7"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_marginStart="-16dp"
             android:layout_marginTop="-8dp"
             android:layout_marginEnd="-16dp"
             android:layout_marginBottom="-8dp"
             android:src="@drawable/corner"
             app:layout_constraintBottom_toBottomOf="@+id/time"
             app:layout_constraintEnd_toEndOf="@+id/time"
             app:layout_constraintHorizontal_bias="1.0"
             app:layout_constraintStart_toStartOf="@+id/imageView8"
             app:layout_constraintTop_toTopOf="@+id/time"
             app:layout_constraintVertical_bias="1.0" />

         <TextView
             android:id="@+id/time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="16dp"
             android:fontFamily="@font/font"
             android:gravity="center"
             android:text="01:00"
             android:textColor="#000000"
             android:textSize="24sp"
             app:layout_constraintEnd_toEndOf="@+id/b1"
             app:layout_constraintTop_toBottomOf="@+id/b1" />

         <ImageView
             android:id="@+id/imageView8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginEnd="8dp"
             android:src="@drawable/baseline_access_time_24"
             app:layout_constraintBottom_toBottomOf="@+id/time"
             app:layout_constraintEnd_toStartOf="@+id/time"
             app:layout_constraintTop_toTopOf="@+id/time" />

         <ImageView
             android:id="@+id/imageView6"
             android:layout_width="0dp"
             android:layout_height="70dp"
             android:layout_marginBottom="16dp"
             android:src="@drawable/drag"
             app:layout_constraintBottom_toTopOf="@+id/back2"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent" />

         <ImageView
             android:id="@+id/imageView10"
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@drawable/tap"
             app:layout_constraintBottom_toBottomOf="@+id/imageView6"
             app:layout_constraintEnd_toEndOf="@+id/imageView6"
             app:layout_constraintStart_toStartOf="@+id/imageView6"
             app:layout_constraintTop_toBottomOf="@+id/imageView6" />

         <TextView
             android:id="@+id/textView"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:background="#99000000"
             android:fontFamily="@font/font"
             android:gravity="center"
             android:padding="32dp"
             android:text="Start moving to start the game"
             android:textColor="#FFFFFF"
             android:textSize="48sp"
             android:visibility="visible"
             app:layout_constraintBottom_toBottomOf="@+id/game"
             app:layout_constraintEnd_toEndOf="@+id/game"
             app:layout_constraintHorizontal_bias="1.0"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="1.0" />
     </androidx.constraintlayout.widget.ConstraintLayout>
</layout>